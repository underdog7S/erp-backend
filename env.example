# Django Settings
SECRET_KEY=your_django_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback/

# Blocklist for unwanted signups/logins (comma-separated values)
BLOCKED_EMAILS=spam@example.com,bounce@other.com
BLOCKED_EMAIL_DOMAINS=spamdomain.com

# Tawk.to Configuration
TAWK_SITE_ID=your_tawk_site_id_here
TAWK_WIDGET_ID=your_tawk_widget_id_here

# Email Configuration (for invoice sending)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# File Storage
MEDIA_URL=/media/
STATIC_URL=/static/ 