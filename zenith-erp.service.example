[Unit]
Description=Zenith ERP Gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/projects/zenith-erp
Environment="PATH=/home/ubuntu/projects/zenith-erp/venv/bin"
# Load environment variables from .env file
EnvironmentFile=/home/ubuntu/projects/zenith-erp/.env
# Force production settings
Environment="DJANGO_SETTINGS_MODULE=erp.settings_production"
ExecStart=/home/ubuntu/projects/zenith-erp/venv/bin/gunicorn \
    --workers 3 \
    --bind 127.0.0.1:8000 \
    --access-logfile /home/ubuntu/projects/zenith-erp/logs/gunicorn-access.log \
    --error-logfile /home/ubuntu/projects/zenith-erp/logs/gunicorn-error.log \
    erp.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

